<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sunandan.mediaplayer.MainActivity">

    <ListView
        android:id="@id/android:list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_above="@+id/seekBar" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:layout_above="@+id/btnStop"/>

    <ImageButton
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_stop_white_18dp"
        android:id="@+id/btnStop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_skip_previous_white_18dp"
        android:id="@+id/btnPrev"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnStop"
        android:layout_toEndOf="@+id/btnStop" />

    <ImageButton
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_arrow_white_18dp"
        android:id="@+id/btnPause"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnPrev"
        android:layout_toEndOf="@+id/btnPrev" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_skip_next_white_18dp"
        android:id="@+id/btnNext"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnPause"
        android:layout_toEndOf="@+id/btnPause" />
</RelativeLayout>
